<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id='AHT_Portfolio::settings' title='Settings'>
                    <resource id="AHT_Portfolio::portfolio" title="Portfolio" sortOrder="99">
                        <resource id='AHT_Portfolio::index_portfolio' title='Portfolio Index' />
                        <resource id='AHT_Portfolio::create_portfolio' title='Portfolio Create' />
                        <resource id='AHT_Portfolio::edit_portfolio' title='Portfolio Edit' />
                        <resource id='AHT_Portfolio::delete_portfolio' title='Portfolio Delete' />
                    </resource>
                    <resource id='AHT_Portfolio::config' title='Config Module' />
                    <resource id="AHT_Portfolio::category" title="Category" sortOrder="100">
                        <resource id='AHT_Portfolio::index_category' title='Category Index' />
                        <resource id='AHT_Portfolio::create_category' title='Category Create' />
                        <resource id='AHT_Portfolio::edit_category' title='Category Edit' />
                        <resource id='AHT_Portfolio::delete_category' title='Category Delete' />
                    </resource>       
                </resource>
                
            </resource>
        </resources>
    </acl>
</config>